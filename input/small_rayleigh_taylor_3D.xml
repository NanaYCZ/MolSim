<?xml version="1.0" encoding="UTF-8"?>
<parameters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="parameters.xsd">

    <!-- Output Parameters -->
    <outputParameters>
        <baseName>out</baseName>
        <writeFrequency>100</writeFrequency>
    </outputParameters>


    <!-- Simulation Parameters -->
    <simulationParameters>
        <tEnd>20</tEnd>
        <deltaT>0.0005</deltaT>
        <cutOffRadius>3.6</cutOffRadius>
        <cellSize>1.8</cellSize>
        <gravityFactor>-12.44</gravityFactor>
        <forceType>
           <smoothedLJ>
               <r_l>1.9</r_l>
           </smoothedLJ>
        </forceType>
        <parallelizationVersion>
            <first_method>
                <numThreads>4</numThreads>
            </first_method>
        </parallelizationVersion>
        <Thermostats>
            <initTemp>40</initTemp>
            <thermoStatFrequency>1000</thermoStatFrequency>
        </Thermostats>
        <boundaryConditions>
            <boundaryConditionsPositiveZ>periodic</boundaryConditionsPositiveZ>
            <boundaryConditionsNegativeZ>periodic</boundaryConditionsNegativeZ>
            <boundaryConditionsPositiveX>periodic</boundaryConditionsPositiveX>
            <boundaryConditionsNegativeX>periodic</boundaryConditionsNegativeX>
            <boundaryConditionsPositiveY>reflective</boundaryConditionsPositiveY>
            <boundaryConditionsNegativeY>reflective</boundaryConditionsNegativeY>
        </boundaryConditions>
        <domainDimensions>
            <x>12</x>
            <y>12</y>
            <z>30</z>
        </domainDimensions>
    </simulationParameters>

    <!-- Cuboids -->
    <cuboids>
        <position>
            <x>0.6</x>
            <y>0.6</y>
            <z>0.6</z>
        </position>
        <velocity>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </velocity>
        <dimensions>
            <x>8</x>
            <y>5</y>
            <z>8</z>
        </dimensions>
        <mass>1</mass>
        <meshWidth>1.2</meshWidth>
        <sigma>1.2</sigma>
        <epsilon>1.0</epsilon>
    </cuboids>

    <cuboids>
        <position>
            <x>0.6</x>
            <y>0.6</y>
            <z>10.6</z>
        </position>
        <velocity>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </velocity>
        <dimensions>
            <x>8</x>
            <y>5</y>
            <z>8</z>
        </dimensions>
        <mass>2</mass>
        <meshWidth>1.2</meshWidth>
        <sigma>1.1</sigma>
        <epsilon>1.0</epsilon>
    </cuboids>


    <!-- Spheres -->


